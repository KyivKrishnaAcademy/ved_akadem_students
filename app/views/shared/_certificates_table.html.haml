.table-responsive
  %table.table.table-condensed.table-striped
    %thead
      %tr
        %th.text-top #
        %th.text-top=t('.serial')
        %th.text-top=t('.template')
        %th.text-top=t('.issued_date')
    %tbody
      - if certificates.any?
        - certificates.each_with_index do |certificate, index|
          %tr
            %td
              = index.next
            %td.nowrap
              - if certificate.certificate_template.file.present? && policy(certificate).show?
                = link_to certificate.serial_id, certificate_pdf_path(certificate.serial_id)
              - else
                = certificate.serial_id
            %td
              = certificate.certificate_template.title
            %td.nowrap
              = l certificate.issued_date, format: :date
      - else
        %tr
          %td.central-row{colspan: 4}
            = t('.no_certificates_yet')
