.col-xs-12.col-sm-6.col-sm-offset-3.vert-offset-top-12
  = t '.you_are_subscribed_to'

.col-xs-12.col-sm-6.col-sm-offset-3.vert-offset-top-1.stop_double_submit
  = simple_form_for @person, url: subscriptions_path do |f|
    .row.form-inputs
      .col-xs-12
        = f.input :notify_schedules, as: :boolean, wrapper: :inline_checkbox

    .row.form-actions.vert-offset-top-4
      .col-xs-12.text-center
        = f.button :button, class: 'btn btn-submit' do
          %span.glyphicon.glyphicon-refresh.spinner{ aria: { hidden: true } }
          = t('.save')
