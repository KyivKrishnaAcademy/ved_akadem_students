- provide(:title, t('.title'))

.row
  .col-xs-12
    %h1.text-center
      = t('.title')

.row.vert-offset-top-2
  .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4.vert-offset-top-1.stop_double_submit
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { required: false }, html: { method: :put }) do |f|
      = render 'shared/error_messages', object: f.object

      .form-inputs
        = f.input :current_password
        = f.input :password, autocomplete: 'off'
        = f.input :password_confirmation

      .form-actions
        = f.button :button, class: 'btn btn-submit col-xs-12' do
          %span.glyphicon.glyphicon-refresh.spinner{ aria: { hidden: true } }
          = t('links.update')
