- provide(:title, t('.title'))

.row
  .col-xs-12
    %h1.text-center= t('.title')

  .col-xs-12.col-sm-6.col-sm-offset-3.vert-offset-top-1.text-right
    = link_to_show policy(@academic_group).show?, academic_group_path(@academic_group)
    = link_to_new policy(AcademicGroup).new?, new_academic_group_path
    = link_to_index policy(AcademicGroup).index?, academic_groups_path
    = link_to_destroy policy(@academic_group).destroy?, @academic_group

  .col-xs-12.col-sm-6.col-sm-offset-3.vert-offset-top-1.stop_double_submit
    = render 'form', submit_label: t('.submit')
