= render 'certificate_template_images_header'

.row
  .col-xs-12#nested-certificate-template-images
    = f.fields_for :certificate_template_images do |e|
      .row
        .col-xs-12
          %hr
      .row
        .col-xs-12
          = e.association :signature

      .row
        .col-xs-3
          = e.input :angle, as: :numeric
        .col-xs-3
          = e.input :scale, as: :numeric
        .col-xs-3
          = e.input :x, as: :numeric
        .col-xs-3
          = e.input :y, as: :numeric

      .row
        .col-xs-12.vert-offset-bottom-1.text-right
          = e.link_to_remove '', class: 'btn btn-danger btn-xs glyphicon glyphicon-minus-sign'

.row.vert-offset-bottom-1
  .col-xs-12
    = f.link_to_add '', :certificate_template_images, class: 'btn btn-success btn-xs glyphicon glyphicon-plus-sign', data: { target: '#nested-certificate-template-images' }
